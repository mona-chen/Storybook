<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/stories/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
            </td>

            <form action="/stories/{{_id}}" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_csrf" value="{{_csrf}}">
                <td>
                    <button type="submit" class="btn red btn-float"><i class="fas fa-trash "></i></button>
                </td>
        </tr>
        {{/each}}
    </tbody>

{{else}}
<p>You have not created any stories</p>
{{/if}} 